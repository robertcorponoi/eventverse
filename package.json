{
  "name": "eventverse",
  "version": "1.0.4",
  "description": "Eventverse is a highly performant and easy to understand event emitter for the JavaScript Universe which includes Node and the browser.",
  "main": "index.js",
  "module": "eventverse.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "rollup -c",
    "bundle:watch": "rollup -c --watch",
    "test": "mocha"
  },
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/robertcorponoi/eventverse.git"
  },
  "keywords": [
    "EventEmitter",
    "event",
    "events",
    "emit",
    "pub",
    "publish",
    "sub",
    "subscribe",
    "pub/sub",
    "emitter"
  ],
  "author": "Robert Corponoi",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sinon": "^7.5.0",
    "typescript": "^3.6.4"
  }
}
